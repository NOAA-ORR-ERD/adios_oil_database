<div class="container">
  <center>
    <h4>{{sampleName}}</h4>

    {{#if (or oil.fraction_weathered oil.boiling_point_range)}}
      <p class="small">
        {{#if oil.fraction_weathered}}
          <strong>Weathered Amount:</strong>
          {{value-unit oil.fraction_weathered 2}}
        {{/if}}

        {{#if oil.boiling_point_range}}
          {{#if oil.fraction_weathered}}
            <br>
          {{/if}}
          <strong>BP Range:</strong>
          {{value-unit oil.boiling_point_range 2}}
        {{/if}}
      </p>
    {{/if}}
  </center>

  <div class="row">
    <Table::Water @oil={{oil}} class="col-3"/>

    <Table::Wax @oil={{oil}} class="col-3"/>

    <Table::Sulfur @oil={{oil}} class="col-3"/>
  </div>

  <div class="row">
    <Table::Sara @oil={{oil}} class="col-4"/>

    <Table::Conradson @oil={{oil}} class="col-4"/>
  </div>

  <div class="row">
    <Table::Benzene @oil={{oil}} class="col-5"/>
  </div>
  &nbsp;

  <div class="row">
    <Table::BenzeneBtex @oil={{oil}} class="col-3"/>

    <Table::BenzeneC4c6 @oil={{oil}} class="col-5"/>
  </div>
  &nbsp;

  <div class="row">
    <Table::AlkylatedPah @oil={{oil}} class="col-12"/>
  </div>

  <div class="row">
    <Table::Alkane @oil={{oil}} class="col-7"/>
  </div>

  <div class="row">
    <Table::Chromatography @oil={{oil}} class="col-4"/>
    <Table::Headspace @oil={{oil}} class="col-3"/>
  </div>

  <div class="row">
    <Table::Biomarkers @oil={{oil}} class="col-5"/>
  </div>

</div>
