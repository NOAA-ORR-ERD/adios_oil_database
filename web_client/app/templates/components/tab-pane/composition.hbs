<div class="container-fluid">
  <center>
    {{#if this.args.editable}}
      <Input 
        @class="edit-sample-name p-1 my-3 flex-fill bg-transparent border"
        @value={{this.args.oil.name}}
        @placeholder="Enter Sample Name"
        @change={{action this.args.submit this.args.oil}} 
      />
    {{else}}
      <h4>{{this.args.sampleName}}</h4>
    {{/if}}

    {{#if (or this.args.oil.fraction_weathered this.args.oil.boiling_point_range)}}
      <p class="small">
        {{#if this.args.oil.fraction_weathered}}
          <strong>Weathered Fraction:</strong>
          {{#if this.args.editable}}
            <Input 
              @class="edit-fraction-weathered p-1 my-3 flex-fill bg-transparent border"
              @value={{this.args.oil.fraction_weathered}}
              @placeholder="Enter Weathered Fraction"
              @change={{action this.args.submit this.args.oil}} 
            />
          {{else}}
            {{#if this.args.oil.fraction_weathered.unit}}
              {{value-unit this.args.oil.fraction_weathered 2}}
            {{else}}
              {{this.args.oil.fraction_weathered}}
            {{/if}}
          {{/if}}
        {{/if}}

        {{#if this.args.oil.boiling_point_range}}
          {{#if this.args.oil.fraction_weathered}}
            <br>
          {{/if}}
          <strong>BP Range:</strong>
          {{value-unit this.args.oil.boiling_point_range 2}}
        {{/if}}
      </p>
    {{/if}}
  </center>

  <div class="row">
    <div class="col-lg-4">
      <Table::Water 
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="col-4"
      />
    </div>

    <div class="col-lg-4">
      <Table::Wax
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="col-4"
      />
    </div>

    <div class="col-lg-4">
      <Table::Sulfur
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="col-4"
      />
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-lg-3">
      <Table::Sara
        @store={{this.args.store}}
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="col-6"
      />
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <Common::StaticTable
        @store={{this.args.store}}
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @tableTitle="Benzene & Alkylated Benzene:"
        @templateName="benzene_and_alkylated_benzene"
        @propertyName="benzene"
        @valueUnit="ppm"
        @valuePrecision={{3}}
      />

      <Common::StaticTable
        @store={{this.args.store}}
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @tableTitle="BTEX Group:"
        @boldTitle={{true}}
        @propertyName="benzene"
        @valueUnit="ppm"
        @valuePrecision={{3}}
      />
    </div>

    <div class="col-5">
      <Common::StaticTable
        @store={{this.args.store}}
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @tableTitle="C4-C6 Alkyl Benzenes:"
        @templateName="c4_c6_alkyl_benzenes"
        @boldTitle={{true}}
        @propertyName="benzene"
        @valueUnit="ppm"
        @valuePrecision={{3}}
      />
    </div>
  </div>
  &nbsp;

  <Table::AlkylatedPah
    @store={{this.args.store}}
    @oil={{this.args.oil}}
    @editable={{this.args.editable}}
    @submit={{this.args.submit}}
  />

  <Table::Alkane
    @store={{this.args.store}}
    @oil={{this.args.oil}}
    @editable={{this.args.editable}}
    @submit={{this.args.submit}}
  />

  <div class="row">
    <Common::StaticTable
      @store={{this.args.store}}
      @oil={{this.args.oil}}
      @editable={{this.args.editable}}
      @submit={{this.args.submit}}
      @tableTitle="Biomarkers:"
      @boldTitle={{true}}
      @propertyName="biomarkers"
      @valueUnit="ppm"
      @valuePrecision={{3}}
    />
  </div>

</div>
