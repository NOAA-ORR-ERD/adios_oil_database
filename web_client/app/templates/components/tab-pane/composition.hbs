<div class="container-fluid">

  <TabPane::PaneHeader
    @oil={{this.args.oil}}
    @editable={{this.args.editable}}
    @submit={{this.args.submit}}
    @sampleName={{this.args.sampleName}}
  />

  <div class="row">
    <div class="col-lg-4">
      <Table::Water 
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="col-4"
      />
    </div>

    <div class="col-lg-4">
      <Table::Wax
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="col-4"
      />
    </div>

    <div class="col-lg-4">
      <Table::Sulfur
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="col-4"
      />
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-lg-3">
      <Table::Sara
        @store={{this.args.store}}
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="col-6"
      />
    </div>
  </div>

  <div class="row">
    <div class="col-3">
      <Common::StaticTable
        @store={{this.args.store}}
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @tableTitle="Benzene & Alkylated Benzene:"
        @templateName="benzene_and_alkylated_benzene"
        @propertyName="benzene"
        @valueUnit="ppm"
        @valuePrecision={{3}}
      />

      <Common::StaticTable
        @store={{this.args.store}}
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @tableTitle="BTEX Group:"
        @boldTitle={{true}}
        @propertyName="benzene"
        @valueUnit="ppm"
        @valuePrecision={{3}}
      />
    </div>

    <div class="col-5">
      <Common::StaticTable
        @store={{this.args.store}}
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @tableTitle="C4-C6 Alkyl Benzenes:"
        @templateName="c4_c6_alkyl_benzenes"
        @boldTitle={{true}}
        @propertyName="benzene"
        @valueUnit="ppm"
        @valuePrecision={{3}}
      />
    </div>
  </div>
  &nbsp;

  <Table::AlkylatedPah
    @store={{this.args.store}}
    @oil={{this.args.oil}}
    @editable={{this.args.editable}}
    @submit={{this.args.submit}}
  />

  <Table::Alkane
    @store={{this.args.store}}
    @oil={{this.args.oil}}
    @editable={{this.args.editable}}
    @submit={{this.args.submit}}
  />

  <div class="row">
    <Common::StaticTable
      @store={{this.args.store}}
      @oil={{this.args.oil}}
      @editable={{this.args.editable}}
      @submit={{this.args.submit}}
      @tableTitle="Biomarkers:"
      @boldTitle={{true}}
      @propertyName="biomarkers"
      @valueUnit="ppm"
      @valuePrecision={{3}}
    />
  </div>

</div>
