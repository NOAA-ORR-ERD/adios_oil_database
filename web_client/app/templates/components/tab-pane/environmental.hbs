<div class="container-fluid">

  <TabPane::PaneHeader
    @oil={{@oil}}
    @editable={{@editable}}
    @submit={{@submit}}
    @sampleName={{@sampleName}}
    @sampleIndex={{@sampleIndex}}
  />

  <div class="row">

    <div class="col-6">
      <Common::ListPropertiesTable
        @oil={{@oil}}
        @store={{@store}}
        @editable={{@editable}}
        @submit={{@submit}}
        @tableTitle="Chemical Dispersibility"
        @propertyName="environmental_behavior.dispersibilities"
      />
    </div>
    <div class="col-6">
      <Common::ListPropertiesTable
        @oil={{@oil}}
        @store={{@store}}
        @editable={{@editable}}
        @submit={{@submit}}
        @tableTitle="Emulsion Properties"
        @templateName="emulsions"
        @propertyName="environmental_behavior.emulsions"
        @headerPosition="side"
      />
    </div>

  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-8">
    </div>
  </div>

</div>
