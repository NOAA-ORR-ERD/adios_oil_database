<div class="container">
  <center>
    <h4>{{sampleName}}</h4>
  </center>

  <div class="row">
    {{#if oil.fraction_weathered}}
      <div class="col-lg-4">
        <div class="row">
          <div class="detail-section">
            <div class="table-responsive">
              <strong>Weathered Amount:</strong>
              {{value-unit oil.fraction_weathered 2}}
            </div>
          &nbsp;
          </div>
        </div>
      </div>
    {{/if}}

    {{#if oil.boiling_point_range}}
      <div class="col-lg-4">
        <div class="row">
          <div class="detail-section">
            <div class="table-responsive">
              <strong>BP Range:</strong>
              {{value-unit oil.boiling_point_range 2}}
            </div>
          &nbsp;
          </div>
        </div>
      </div>
    {{/if}}

  </div>

  <div class="row">
    <div class="col-lg-4">
      <TabPourPoint @oil={{oil}} class="row"/>
    </div>

    <div class="col-lg-4">
      <TabFlashPoint @oil={{oil}} class="row"/>
    </div>

    <div class="col-lg-4">
      <Table::Adhesion @oil={{oil}} class="row"/>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-4">
      <Table::Density @oil={{oil}} class="row"/>
    </div>

    <div class="col-lg-4">
      <Table::KinematicViscosity @oil={{oil}} class="row"/>
    </div>

    <div class="col-lg-4">
      <Table::DynamicViscosity @oil={{oil}} class="row"/>
    </div>

    <div class="col-lg-4">
      <Table::Ift @oil={{oil}} class="row"/>
    </div>

    <div class="col-lg-4">
      {{! Placeholder div so that the last container lines up
          with the first column.  Only necessary for an odd number
          of containers }}
    </div>

  </div>
</div>
