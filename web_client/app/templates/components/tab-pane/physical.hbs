<div class="container-fluid">
  <center>
    {{#if editable}}
      <Input 
        @class="edit-sample-name p-1 my-3 flex-fill bg-transparent border"
        @value={{this.oil.name}}
        @placeholder="Enter Sample Name"
        @change={{action this.submit this.oil}} 
      />
    {{else}}
      <h4>{{sampleName}}</h4>
    {{/if}}

    {{#if (or oil.fraction_weathered oil.boiling_point_range)}}
      <p class="small">
        {{#if oil.fraction_weathered}}
          <strong>Weathered Fraction:</strong>
          {{#if editable}}
            <Input 
              @class="edit-fraction-weathered p-1 my-3 flex-fill bg-transparent border"
              @value={{this.oil.fraction_weathered}}
              @placeholder="Enter Weathered Fraction"
              @change={{action this.submit this.oil}} 
            />
          {{else}}
            {{#if oil.fraction_weathered.unit}}
              {{value-unit oil.fraction_weathered 2}}
            {{else}}
              {{oil.fraction_weathered}}
            {{/if}}
          {{/if}}
        {{/if}}

        {{#if oil.boiling_point_range}}
          {{#if oil.fraction_weathered}}
            <br>
          {{/if}}
          <strong>BP Range:</strong>
          {{value-unit oil.boiling_point_range 2}}
        {{/if}}
      </p>
    {{/if}}
  </center>

  <div class="row">
    <div class="col-lg-4">
      <Table::PourPoint
        @oil={{this.oil}}
        @editable={{this.editable}}
        @submit={{this.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="row"
      />
    </div>

    <div class="col-lg-4">
      <Table::FlashPoint
        @oil={{this.oil}}
        @editable={{this.editable}}
        @submit={{this.submit}}
        @sampleIndex={{this.sampleIndex}}
        class="row"/>
    </div>

    <div class="col-lg-4">
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-lg-4">
      <Table::Density
        @oil={{this.oil}}
        @editable={{this.editable}}
        @submit={{this.submit}}
        class="row"/>
    </div>

    <div class="col-md-6 col-lg-4">
      <Table::KinematicViscosity
        @oil={{this.oil}}
        @editable={{this.editable}}
        @submit={{this.submit}}
        class="row"/>
    </div>

    <div class="col-md-6 col-lg-4">
      <Table::DynamicViscosity
        @oil={{this.oil}}
        @editable={{this.editable}}
        @submit={{this.submit}}
        class="row"/>
    </div>

    <div class="col-lg-8">
      <Table::Ift
        @oil={{this.oil}}
        @editable={{this.editable}}
        @interfaces={{array
          ""
          "air"
          "water"
          "seawater"}}
        @submit={{this.submit}}
        class="row"/>
    </div>

    <div class="col-xs-6 col-sm-6 col-lg-4">
      {{! Placeholder div so that the last container lines up
          with the first column.  Only necessary for an odd number
          of containers }}
    </div>

  </div>
</div>
