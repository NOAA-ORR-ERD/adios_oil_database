<div class="container-fluid">

  <TabPane::PaneHeader
    @oil={{this.args.oil}}
    @editable={{this.args.editable}}
    @submit={{this.args.submit}}
    @sampleName={{this.args.sampleName}}
    @sampleIndex={{this.args.sampleIndex}}
  />

  <div class="row">
    <div class="col-lg-4">
      <Table::PourPoint
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.args.sampleIndex}}
        class="row"
      />
    </div>

    <div class="col-lg-4">
      <Table::FlashPoint
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @sampleIndex={{this.args.sampleIndex}}
        class="row"/>
    </div>

    <div class="col-lg-4">
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-lg-4">
      <Table::Density
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        class="row"/>
    </div>

    <div class="col-md-6 col-lg-4">
      <Table::KinematicViscosity
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        class="row"/>
    </div>

    <div class="col-md-6 col-lg-4">
      <Table::DynamicViscosity
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        class="row"/>
    </div>

    <div class="col-lg-8">
      <Table::Ift
        @oil={{this.args.oil}}
        @editable={{this.args.editable}}
        @submit={{this.args.submit}}
        @interfaces={{array
          ""
          "air"
          "water"
          "seawater"}}
        class="row"/>
    </div>

    <div class="col-xs-6 col-sm-6 col-lg-4">
      {{! Placeholder div so that the last container lines up
          with the first column.  Only necessary for an odd number
          of containers }}
    </div>

  </div>
</div>
