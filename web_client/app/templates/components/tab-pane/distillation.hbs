<div class="container">
  <center>
    <h4>{{sampleName}}</h4>

    {{#if (or oil.fraction_weathered oil.boiling_point_range)}}
      <p class="small">
        {{#if oil.fraction_weathered}}
          <strong>Weathered Amount:</strong>
          {{value-unit oil.fraction_weathered 2}}
        {{/if}}

        {{#if oil.boiling_point_range}}
          {{#if oil.fraction_weathered}}
            <br>
          {{/if}}
          <strong>BP Range:</strong>
          {{value-unit oil.boiling_point_range 2}}
        {{/if}}
      </p>
    {{/if}}
  </center>

  <div class="row">
    <div class="col-lg-5">
      <Table::Distillation @oil={{oil}} class="row"/>
    </div>

    <div class="col-lg-5">
      <strong>Distillation Graph:</strong>

      <Graph::Distillation @oil={{oil}} @sampleName={{sampleName}} class="row"/>
    </div>

  </div>
</div>
