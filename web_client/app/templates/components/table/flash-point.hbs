<div class="detail-section">
  <div class="table-responsive d-flex input-group align-items-center">
    <label class="p-1 input-group-text font-weight-bold">Flash Point:</label>

    {{#if @editable}}
      <Common::RangeValueInput
        @valueTitle="Flash Point"
        @valueObject={{@oil}}
        @valueName="physical_properties.flash_point.measurement"
        @valueUnit="C"
        @valuePrecision="2"
        @sampleIndex={{@sampleIndex}}
        @submit={{this.submit}}
      />
    {{else}}
      {{#if @oil.physical_properties.flash_point.measurement}}
        <span>
          {{value-unit (convert-unit @oil.physical_properties.flash_point.measurement "C") 2}}
        </span>
      {{else}}
        No Data
      {{/if}}
    {{/if}}  {{!-- editable --}}
  </div>

  &nbsp;

</div>
