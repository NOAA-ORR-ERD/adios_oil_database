<div class="detail-section">
  <div class="table-responsive">
    <strong>Interfacial Tension:</strong>

    <table class="table table-hover table-bordered">
      <thead aria-controls="ift-tbody"
             aria-expanded="false">
        <tr>
          <th scope="col">Interface</th>
          <th scope="col">Tension</th>
          <th scope="col">Temperature</th>
        </tr>
      </thead>
      <tbody id="ift-tbody">
        {{#each this.iftsArray as |ift index|}}
          <tr>
            <td>
              {{#if this.args.editable}}
                <select class="p-1 flex-fill bg-transparent border" {{on "change" (fn this.updateInterface index)}}>
                  {{#each this.args.interfaces as |interface|}}
                    {{#if (eq ift.interface interface)}}
                      <option class="bg-light" selected>{{interface}}</option>
                    {{else}}
                      <option class="bg-light">{{interface}}</option>
                    {{/if}}
                  {{/each}}
                </select>
              {{else}}
                {{ift.interface}}
              {{/if}}
            </td>
            <td>
              <Common::ValueUnitInput
                @valueObject={{ift.tension}}
                @valueUnit={{"N/m"}}
                @valuePrecision={{3}}
                @editable={{this.args.editable}}
                @submit={{fn this.updateTension index}}
              />
            </td>
            <td>
              <Common::ValueUnitInput
                @valueObject={{ift.ref_temp}}
                @valueUnit={{"C"}}
                @valuePrecision={{2}}
                @editable={{this.args.editable}}
                @submit={{fn this.updateTemperature index}}
              />
            </td>
            {{#if this.args.editable}}
              <td class="border-0">
                <button type="button" {{on "click" this.deleteTableRow}}
                  class="btn btn-outline-danger btn-sm p-0 m-0 border-0">
                  {{fa-icon "times"}}
                </button>
              </td>
            {{/if}}
            {{!-- 
            <td>{{ift.interface}}</td>
            <td>{{value-unit ift.tension 3}}</td>
            <td>{{value-unit (convert-unit ift.ref_temp "C") 2}}</td>
            --}}
          </tr>
        {{/each}}

        {{#if this.args.editable}}
          <tr>
            <td class="border-0">
              <button type="button" {{on "click" this.addEmptyTableRow}}
                class="btn btn-outline-dark btn-sm p-0 border-0">
                {{fa-icon "plus"}}
              </button>
            </td>
          </tr>
        {{else}}
          {{#unless this.args.oil.ifts}}
            <tr><td>No Data</td></tr>
          {{/unless}}
        {{/if}}
      </tbody>
    </table>

  </div>
</div>
