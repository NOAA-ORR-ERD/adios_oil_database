<div class="detail-section">
  <strong>Aromatics (F2):</strong>

  <div class="row">
    <div class="col-12">

      <div class="table-responsive">
        <table class="table table-hover table-bordered">
          <thead class="clickable" data-toggle="collapse"
                 data-target=".ccmef2-row-collapse"
                 aria-controls="ccmef2-tbody"
                 aria-expanded="false">
            <tr>
              <th scope="col">#</th>
              <th scope="col">n-C8 to n-c10</th>
              <th scope="col">n-C10 to n-c12</th>
              <th scope="col">n-C12 to n-c16</th>
              <th scope="col">n-C16 to n-c20</th>
              <th scope="col">n-C20 to n-c24</th>
              <th scope="col">n-C24 to n-c28</th>
              <th scope="col">n-C28 to n-c34</th>
              <th scope="col">n-C34+</th>
              <th scope="col">Weathering</th>
            </tr>
          </thead>
          <tbody id="ccmef2-tbody">
            {{#each oil.ccmeF2 as |f2 index|}}
              {{#if (eq f2.weathering weathered)}}
                <tr class="collapse show ccmef2-row-collapse">
                  <th>{{index}}</th>
                  <td>{{f2.n_c8_to_n_c10}}</td>
                  <td>{{f2.n_c10_to_n_c12}}</td>
                  <td>{{f2.n_c12_to_n_c16}}</td>
                  <td>{{f2.n_c16_to_n_c20}}</td>
                  <td>{{f2.n_c20_to_n_c24}}</td>
                  <td>{{f2.n_c24_to_n_c28}}</td>
                  <td>{{f2.n_c28_to_n_c34}}</td>
                  <td>{{f2.n_c34}}</td>
                  <td>{{f2.weathering}}</td>
                </tr>
              {{/if}}
            {{/each}}

            {{#if oil.ccmeF2}}
              <tr class="collapse ccmef2-row-collapse">
                <th>&#x2026;</th>
              </tr>
            {{else}}
              <tr><td>Empty</td></tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

</div>
