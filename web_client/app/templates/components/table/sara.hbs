<div class="detail-section">
  <div class="table-responsive">
    <strong>SARA Total Fractions:</strong>

    <table class="table table-hover table-bordered">
      <tbody id="sara-tbody">

        {{#each-in this.properties as |attr value|}}
          <tr>
            <td>{{value.label}}</td>
            {{#if (find-by "sara_type" value.label this.saraArray)}}
              {{#with (find-by "sara_type" value.label this.saraArray) as |sara|}}
                <td>
                  {{!-- was: <td>{{value-unit sara.fraction 3}}</td> --}}
                  <Common::ValueUnitInput
                    @valueObject={{sara.fraction}}
                    @valueUnit="%"
                    @valuePrecision={{2}}
                    @editable={{this.args.editable}}
                    @submit={{fn this.updateCellValue (get value "label")}}
                  />
                </td>
              {{/with}}
            {{else}}
              {{#if this.args.editable}}
                <td>
                  <Common::ValueUnitInput
                    @valueObject=""
                    @valueUnit="%"
                    @valuePrecision={{2}}
                    @editable={{this.args.editable}}
                    @submit={{fn this.updateCellValue (get value "label")}}
                  />
                </td>
              {{else}}
                <td>No Data</td>
              {{/if}}
            {{/if}}
          </tr>
        {{/each-in}}

      </tbody>
    </table>

  </div>

</div>
