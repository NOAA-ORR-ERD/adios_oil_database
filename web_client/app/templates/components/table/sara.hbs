<div class="detail-section">
  <div class="table-responsive">
    <div class="text-center">
      <strong>SARA Total Fractions:</strong>
    </div>

    <table class="table table-hover table-bordered">
      <tbody id="sara-tbody">

        {{#each-in this.properties as |attr value|}}
          <tr>
            <td>{{value.label}}</td>

            {{#if (get @oil.SARA attr)}}
              <td>
                <Common::ValueUnitInput
                  @valueObject={{get @oil.SARA attr}}
                  @valueUnit="%"
                  @valuePrecision={{2}}
                  @editable={{@editable}}
                  @submit={{fn this.updateCellValue (get value "label")}}
                />
              </td>
            {{else}}
              {{#if @editable}}
                <td>
                  <Common::ValueUnitInput
                    @valueObject={{get (set-attr-if-none 
                      (set-attr-if-none @oil "SARA" (hash))
                      attr (hash)) attr
                    }}
                    @valueUnit="%"
                    @valuePrecision={{2}}
                    @editable={{@editable}}
                    @submit={{fn this.updateCellValue (get value "label")}}
                  />
                </td>
              {{else}}
                <td>No Data</td>
              {{/if}}
            {{/if}}
          </tr>
        {{/each-in}}

      </tbody>
    </table>

  </div>
</div>
