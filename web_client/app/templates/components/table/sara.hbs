<div class="detail-section">
  <div class="table-responsive">
    <div class="text-center">
      <strong>SARA Total Fractions:</strong>
    </div>

    <table class="table table-hover table-bordered">
      <tbody id="sara-tbody">

        {{#each-in this.properties as |attr value|}}
          <tr>
            <td>{{value.label}}</td>
            {{#if (get @oil.SARA attr)}}
              {{#with (get @oil.SARA attr) as |sara|}}
                <td>
                  <Common::ValueUnitInput
                    @valueObject={{sara}}
                    @valueUnit="%"
                    @valuePrecision={{2}}
                    @editable={{@editable}}
                    @submit={{fn this.updateCellValue (get value "label")}}
                  />
                </td>
              {{/with}}
            {{else}}
              {{#if @editable}}
                <td>
                  <Common::ValueUnitInput
                    @valueObject=""
                    @valueUnit="%"
                    @valuePrecision={{2}}
                    @editable={{@editable}}
                    @submit={{fn this.updateCellValue (get value "label")}}
                  />
                </td>
              {{else}}
                <td>No Data</td>
              {{/if}}
            {{/if}}
          </tr>
        {{/each-in}}

      </tbody>
    </table>

  </div>

</div>
