<div class="detail-section">
  <div class="table-responsive">
    <strong>Wax Content:</strong>

    <table class="table table-hover table-bordered">
      <thead class="clickable" data-toggle="collapse"
             data-target=".wax-row-collapse"
             aria-controls="wax-tbody"
             aria-expanded="false">
        <tr>
          <th scope="col">Fraction</th>
        </tr>
      </thead>
      <tbody id="wax-tbody">
        {{#each oil.wax_content as |wax|}}
          <tr class="collapse show wax-row-collapse">
            <td>{{value-unit wax.fraction 3}}</td>
          </tr>
        {{/each}}

        {{#if oil.wax_content}}
          <tr class="collapse wax-row-collapse">
            <th>&#x2026;</th>
          </tr>
        {{else}}
          <tr><td>Empty</td></tr>
        {{/if}}
      </tbody>
    </table>
  </div>

</div>
