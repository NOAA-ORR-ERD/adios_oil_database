<div class="detail-section">
  <div class="table-responsive">
    <strong>Chemical Dispersibility:</strong>

    <table class="table table-hover table-bordered">
      <thead class="clickable" data-toggle="collapse"
             data-target=".chemdisp-row-collapse"
             aria-controls="chemdisp-tbody"
             aria-expanded="false">
        <tr>
          <th scope="col">Dispersant</th>
          <th scope="col">Effectiveness</th>
        </tr>
      </thead>
      <tbody id="chemdisp-tbody">
        {{#each oil.chemical_dispersibility as |dispersibility|}}
          <tr class="collapse show chemdisp-row-collapse">
            <td>{{dispersibility.dispersant}}</td>
            <td>{{value-unit dispersibility.effectiveness 3}}</td>
          </tr>
        {{/each}}

        {{#if oil.chemical_dispersibility}}
          <tr class="collapse chemdisp-row-collapse">
            <th scope="row">&#x2026;</th>
          </tr>
        {{else}}
          <tr><td>No Data</td></tr>
        {{/if}}
      </tbody>
    </table>
  </div>

</div>
