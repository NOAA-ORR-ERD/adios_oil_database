<div class="detail-section">
  <strong>Water Content:</strong>

  {{#if this.args.editable}}
    <Common::RangeValueInput
      @valueTitle="Water Content"
      @valueObject={{this.args.oil}}
      @valueName="water.fraction"
      @valueUnit="%"
      @valuePrecision="2"
      @sampleIndex={{this.args.sampleIndex}}
      @submit={{this.submit}}
    />
  {{else}}
    {{#if this.args.oil.water.fraction}}
      {{value-unit (convert-unit this.args.oil.water.fraction "%") 2}}
    {{else}}
      No Data
    {{/if}}
  {{/if}}

  &nbsp;

</div>
