<div class="detail-section">
  <strong>Sulfur Content:</strong>

  {{#if this.args.editable}}
    <Common::RangeValueInput
      @valueTitle="Sulfur Content"
      @valueObject={{this.args.oil}}
      @valueName="sulfur.fraction"
      @valueUnit="%"
      @valuePrecision="2"
      @sampleIndex={{this.args.sampleIndex}}
      @submit={{this.submit}}
    />
  {{else}}
    {{#if this.sulfurContent}}
      {{value-unit (convert-unit this.sulfurContent "%") 2}}
    {{else}}
      No Data
    {{/if}}
  {{/if}}

  &nbsp;

</div>
