<div class="row">
  <div class="col-12">

  {{#if this.args.editable}}
      <Common::ValueUnitTable
        @tableTitle="Kinematic Viscosity"
        @leftColumnTitle="Viscosity"
        @rightColumnTitle="Temperature"
        @valueArray={{this.args.oil.kvis}}
        @leftColumnValueName="viscosity"
        @leftColumnUnit={{"cSt"}}
        @leftColumnPrecision={{3}}
        @rightColumnValueName="ref_temp"
        @rightColumnUnit="C"
        @rightColumnPrecision={{2}}
        @editable={{this.args.editable}}
        @submit={{this.submit}}
      />
  {{else}}
    <Common::ValueUnitTable
      @tableTitle="Kinematic Viscosity"
      @leftColumnTitle="Viscosity"
      @rightColumnTitle="Temperature"
      @valueArray={{this.args.oil.kvis}}
      @leftColumnValueName="viscosity"
      @leftColumnUnit={{"cSt"}}
      @leftColumnPrecision={{3}}
      @rightColumnValueName="ref_temp"
      @rightColumnUnit="C"
      @rightColumnPrecision={{2}}
      @editable={{this.args.editable}}
      @submit={{this.submit}}
    />
  {{/if}}
  
  </div>
</div>
