<div class="detail-section">
  <div class="table-responsive">
    <strong>Distillation Cuts:</strong>

    <table class="table table-hover table-bordered">
      <thead aria-controls="cut-tbody"
             aria-expanded="false">
        <tr>
          <th scope="col">Mass Percent</th>
          <th scope="col">Vapor Temperature</th>
        </tr>
      </thead>
      <tbody id="cut-tbody">
        {{#if oil.cuts}}
          {{#each oil.cuts as |cut|}}
            <tr>
              <td>{{value-unit (convert-unit cut.fraction "%") 2}}</td>
              <td>{{value-unit (convert-unit cut.vapor_temp "C") 2}}</td>
            </tr>
          {{/each}}
        {{else}}
          <tr><td>No Data</td></tr>
        {{/if}}
      </tbody>
    </table>
  </div>

</div>
