{{#if (eq this.headerPosition "top")}}
  <Common::ColumnListPropertiesTable
    @baseProperty={{this.baseProperty}}
    @properties={{this.properties}}
    @editable={{this.args.editable}}
    @submit={{this.args.submit}}
    @tableTitle={{this.args.tableTitle}}
    @boldTitle={{this.boldTitle}}
  />
{{else if (eq this.headerPosition "side")}}
  <Common::RowListPropertiesTable
    @baseProperty={{this.baseProperty}}
    @properties={{this.properties}}
    @editable={{this.args.editable}}
    @submit={{this.args.submit}}
    @tableTitle={{this.args.tableTitle}}
    @boldTitle={{this.boldTitle}}
  />
{{/if}}
