    @boldTitle={{this.boldTitle}}
  />
{{else}}
  <Common::ColumnListPropertiesTable
    @oil={{this.args.oil}}
    @store={{this.args.store}}
    @submit={{this.args.submit}}
    @editable={{this.args.editable}}
    @tableTitle={{this.args.tableTitle}}
    @propertyName={{this.args.propertyName}}
    @templateName={{this.templateName}}
    @boldTitle={{this.boldTitle}}
  />
{{/if}}
