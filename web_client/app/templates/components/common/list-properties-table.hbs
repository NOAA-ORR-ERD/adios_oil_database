{{#if (eq this.headerPosition "side")}}
  <Common::RowListPropertiesTable
    @oil={{@oil}}
    @store={{@store}}
    @submit={{@submit}}
    @editable={{@editable}}
    @tableTitle={{@tableTitle}}
    @propertyName={{@propertyName}}
    @templateName={{this.templateName}}
    @boldTitle={{this.boldTitle}}
  />
{{else}}
  <Common::ColumnListPropertiesTable
    @oil={{@oil}}
    @store={{@store}}
    @submit={{@submit}}
    @editable={{@editable}}
    @tableTitle={{@tableTitle}}
    @propertyName={{@propertyName}}
    @templateName={{this.templateName}}
    @boldTitle={{this.boldTitle}}
  />
{{/if}}
