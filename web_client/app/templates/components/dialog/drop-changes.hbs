<div id={{@id}} class="modal fade" role="dialog" tabindex="-1"
     aria-labelledby="dropChangesDialogLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="dropChangesDialogLabel">
          Confirm exit from edit mode
        </h5>
      </div>

      <div class="modal-body">
        <div class="form">

          <div class="d-flex justify-content-center">
            <strong>
              Please confirm that you would like to leave editing mode.<br>
              Any changes you have made will be lost.
            </strong>
          </div>

        </div>
      </div>

      <div class="modal-footer">

        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Back to Edit Mode
        </button>

        <button type="button" class="btn btn-primary" data-dismiss="modal"
                {{ref this "okButton"}}
                {{on "click" this.submitForm}} >
          Discard Edits
        </button>

      </div>
    </div>
  </div>
</div>
