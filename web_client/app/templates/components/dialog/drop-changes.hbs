<BsModal @onSubmit={{action "submitForm"}}
         @onHidden={{action "closeForm"}}
         as |Modal|>
  <Modal.header>
    <h5 class="modal-title" id="dropChangesDialogLabel">
      Confirm exit from edit mode
    </h5>
  </Modal.header>
  <Modal.body>
    <div class="form">

      <div class="d-flex justify-content-center">
        <strong>
          Please confirm that you would like to leave editing mode.<br>
          Any changes you have made will be lost.
        </strong>
      </div>

    </div>
  </Modal.body>
  <Modal.footer as |footer|>
    <BsButton @onClick={{action Modal.close}} @type="secondary">
      Back to Edit Mode
    </BsButton>
    <BsButton @onClick={{action Modal.submit}} @type="primary">
      Discard Edits
    </BsButton>
  </Modal.footer>
</BsModal>
