<div class="detail-section">
  <div class="table-responsive d-flex align-items-center">
    <label class="p-1 input-group-text font-weight-bold">Pour Point:</label>
    {{#if this.args.editable}}
      <Common::RangeValueInput
        @valueTitle="Pour Point"
        @valueObject={{this.args.oil.pour_point}}
        @valueName="ref_temp"
        @valueUnit="C"
        @valuePrecision="2"
        @sampleIndex={{this.args.sampleIndex}}
      />
    {{else}}
      {{#if this.args.oil.pour_point}}
        <span>
          {{value-unit (convert-unit this.args.oil.pour_point.ref_temp "C") 2}}
        </span>
      {{else}}
        No Data
      {{/if}}
    {{/if}}  {{!-- editable --}}
  </div>

  &nbsp;

</div>
