<div class="detail-section">
  <div class="d-flex align-items-center">
    <label class="p-1 input-group-text font-weight-bold">Pour Point:</label>
    {{#if oil.pour_point}}
      {{#if editable}}
        <Input id="pour-point-id" @class="p-1 bg-transparent border" @type="text"
          @value={{value-unit (convert-unit oil.pour_point.ref_temp "C") 2}}
          @focus-in={{action "toggleModal"}}
          @size="7"
        />

        {{#if isShowingModal}}
          {{#modal-dialog
            onClose=(action "getModalInput")
            translucentOverlay=false
            targetAttachment="center left"
            tetherTarget="#pour-point-id"
            attachment="center left"
          }}
            <h4>
              Enter Pour Point (deg C)
            </h4>
            <form>
              <div class="row form-check d-flex align-items-center">
                <Input @class="col-1"
                  @type="radio" @name="interval-number"
                  @value="interval"
                  @focus-in={{action "toggleRadio"}}
                  @size="1"
                  checked={{this.isInterval}}
                />
                {{#let (if this.isInterval undefined "disabled") as |intervalInputDisabled|}}
                  <fieldset class="col" id="dialog-interval-input" disabled={{intervalInputDisabled}}>
                    <label class="col-2 p-1">Min:</label><input class="col-3" type="text" name="min-value" size="3">
                    <label class="col-2 p-1">Max:</label><input class="col-3" type="text" name="max-value" size="3">
                  </fieldset>
                {{/let}}
              </div>

              <div class="row form-check d-flex align-items-center">
                <Input @class="col-1"
                  @type="radio" @name="interval-number"
                  @value="number"
                  @focus-in={{action "toggleRadio"}}
                  @size="1"
                  checked={{not this.isInterval}}
                />
                {{#let (if this.isInterval "disabled" undefined) as |scalarInputDisabled|}}
                  <fieldset class="col" id="dialog-scalar-input" disabled={{scalarInputDisabled}}>
                    <label class="col-3 p-1 pr-0">Value:</label><input class="col-3" type="text" name="scalar" size="3">
                  </fieldset>
                {{/let}}
              </div>

              <input type="submit" value="OK">
            </form>
          {{/modal-dialog}}        
        {{/if}}
      {{else}}
        <span id="pour-point-id">
          {{value-unit (convert-unit oil.pour_point.ref_temp "C") 2}}
        </span>
      {{/if}}    
    {{else}}
      No Data
    {{/if}}
  </div>


  &nbsp;

</div>
