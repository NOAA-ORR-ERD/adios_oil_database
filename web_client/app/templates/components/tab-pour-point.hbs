<div class="detail-section">
  <div class="d-flex align-items-center">
    <label class="p-1 input-group-text font-weight-bold">Pour Point:</label>
    {{#if this.editable}}

      {{#if this.pour_point}}
        <Input id="pour-point-id" 
          @class="p-1 bg-transparent border"
          @type="text"
          @value={{value-unit (convert-unit this.pour_point.ref_temp "C") 2}}
          @focus-in={{action "openModalDialog"}}
        />
      {{else}}
        <Input id="pour-point-id"
          @class="p-1 bg-transparent border"
          @type="text"
          @value="No Data"
          @focus-in={{action "openModalDialog"}}
        />
      {{/if}} {{!-- if pour_point --}}

      {{#if this.isShowingModal}}

        {{#modal-dialog
          onClose=(action "closeModalDialog")
          translucentOverlay=false
          targetAttachment="center left"
          tetherTarget="#pour-point-id"
          attachment="center left"
        }}
          <div id="scalar-range-dialog" class="card">
            <h5 class="card-header text-center p-1">Pour Point (deg C)</h5>
            <div class="card-body p-1">
              <div class="row d-flex align-items-center mx-2">
                <Input
                  @type="radio"
                  @name="interval-number"
                  @value="interval"
                  @focus-in={{action "toggleRadio"}}
                  id="range-radio-btn"
                  checked={{this.isInterval}}
                />
                <label for="range-radio-btn" class="m-2 pb-1">Range</label>
                {{#let (if this.isInterval undefined "disabled") as |intervalInputDisabled|}}
                  <fieldset id="dialog-interval-input" disabled={{intervalInputDisabled}}>
                    <Input
                        @type="text" 
                        @name="min-value" 
                        @size="5" 
                        @placeholder="-&infin;"
                        class="m-2" 
                    />
                    <Input
                        @type="text" 
                        @name="max-value" 
                        @size="5" 
                        @placeholder="-&infin;"
                        class="m-2" 
                    />
                  </fieldset>
                {{/let}}
              </div>

              <div class="row d-flex align-items-center mx-2">
                <Input
                  @type="radio" @name="interval-number"
                  @value="number"
                  @focus-in={{action "toggleRadio"}}
                  id="value-radio-btn"
                  checked={{not this.isInterval}}
                />
                <label for="value-radio-btn" class="m-2 pb-1 pr-3">Value</label>
                {{#let (if this.isInterval "disabled" undefined) as |scalarInputDisabled|}}
                  <fieldset id="dialog-scalar-input" disabled={{scalarInputDisabled}}>
                    <Input
                      @type="text"
                      @name="scalar"
                      @size="5"
                      @placeholder=""
                      @value={{if not this.interval (value-unit (convert-unit this.pour_point.ref_temp "C") 2 true)}}
                    />
                  </fieldset>
                {{/let}}
              </div>

              <div class="row d-flex justify-content-end mx-2">
                <button type="button" class="btn btn-secondary btn-sm mr-2"
                  {{action "closeModalDialog"}}>
                  Cancel
                </button>
                {{#if this.isThereInput}}
                  <button type="button" class="btn btn-primary btn-sm"
                    onClick={{action "onSave"}}
                  >
                    Save
                  </button>
                {{else}}
                  <button type="button" class="btn btn-primary btn-sm"
                    disabled
                  >
                    Save
                  </button>
                {{/if}}
              </div>
            </div>
          </div>  
        {{/modal-dialog}}        
      {{/if}}  {{!-- isShowingModal --}}

    {{else}}
      {{#if this.pour_point}}
        <span>
          {{value-unit (convert-unit this.args.oil.pour_point.ref_temp "C") 2}}
        </span>
      {{else}}
        No Data
      {{/if}}
    {{/if}}  {{!-- editable --}}
  </div>


  &nbsp;

</div>
