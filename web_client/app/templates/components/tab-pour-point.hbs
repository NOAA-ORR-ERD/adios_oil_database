<div class="detail-section">
  <div class="table-responsive">
    <strong>Pour Point:</strong>

    <table class="table table-hover table-bordered">
      <thead class="clickable" data-toggle="collapse"
             data-target=".pp-row-collapse"
             aria-controls="pp-tbody"
             aria-expanded="false">
        <tr>
          <th scope="col">Temperature</th>
        </tr>
      </thead>
      <tbody id="pp-tbody">
        {{#each oil.pour_points as |pp index|}}
          <tr class="collapse show pp-row-collapse">
            <td>{{value-unit (convert-unit pp.ref_temp "C") 2}}</td>
          </tr>
        {{/each}}

        {{#if oil.pour_points}}
          <tr class="collapse pp-row-collapse">
            <th scope="row">&#x2026;</th>
          </tr>
        {{else}}
          <tr><td>Empty</td></tr>
        {{/if}}
      </tbody>
    </table>

  </div>

</div>
