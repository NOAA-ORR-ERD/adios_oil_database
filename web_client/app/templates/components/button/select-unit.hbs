<BsButton @type="dark" class="m-1 btn-sm text-nowrap"
          @onClick={{this.show_dialog}} >
  {{this.baseProperty}}
</BsButton>


{{#if this.dialogVisible}}
  <Dialog::SelectUnit
    @baseProperty={{this.baseProperty}}
    @parent={{this.element}}
    @unitType={{@unitType}}
    @defaultUnit={{@defaultUnit}}
    @closeModal={{this.close_dialog}}
    @ok={{this.submit}}
  />
{{/if}}
