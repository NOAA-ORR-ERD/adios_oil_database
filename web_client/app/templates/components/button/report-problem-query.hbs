<BsButton @type="dark" @onClick={{this.show_dialog}}
          class="m-1 btn-sm text-nowrap" >
  Report a Problem
</BsButton>


{{#if this.dialogVisible}}
  <Dialog::ReportProblem
    @destination={{this.destination}}
    @subject={{this.subject}}
    @body={{this.body}}
    @submit={{this.submit}}
    @close={{this.close_dialog}}
  />
{{/if}}

