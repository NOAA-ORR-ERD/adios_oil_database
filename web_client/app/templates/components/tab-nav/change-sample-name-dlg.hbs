<div id="changeSampleNameDialog" class="modal fade" role="dialog" tabindex="-1"
     aria-labelledby="changeSampleNameDialogLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="changeSampleNameDialogLabel">
          Rename Oil Subsample
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <div class="form">
          <div class="row">

            <div class="col-6">
              <Input type="text" @class="form-control bg-transparent border"
                     value={{this.sampleName}}
                     {{on "change" this.updateName}}
              />
            </div>

          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Cancel
        </button>

        {{#if this.formFilledOut}}
          <button type="button" class="btn btn-primary" data-dismiss="modal"
                  {{on "click" this.submitForm}} >
            OK
          </button>
        {{else}}
          <button type="button" class="btn btn-primary" data-dismiss="modal"
                  disabled>
            OK
          </button>
        {{/if}}
      </div>
    </div>
  </div>
</div>
