<div class="container">
  <div class="row">
    <div class="col-sm-4 col-lg-3 d-flex flex-column">
      {{! First column }}

      {{! Oil ID }}
      <div class="mb-3 input-group">
        <div class="input-group-prepend">
          <label class="p-1 input-group-text font-weight-bold">ID:</label>
        </div>
        <input type="text" class="p-1 bg-transparent border" value={{oil.id}} readonly>
      </div>

      {{! Type }}
      <div class="form-inline mb-3">
        <div class="input-group-prepend">
          <label class="p-1 input-group-text font-weight-bold">Type:</label>
        </div>  
        <select class="p-1 bg-transparent border">
          {{#each this.oilTypes as |oilType|}}
            {{#if (eq oil.productType oilType)}}
              <option selected>{{oilType}}</option>
            {{else}}
              <option>{{oilType}}</option>
            {{/if}}  
          {{/each}}
        </select>
      </div>

      {{! Status }}
      {{#unless oil.status}}
        <span class="mb-3 input-group">
          <div class="input-group-prepend">
            <label class="p-1 input-group-text font-weight-bold">Status:</label>
          </div>
          <input type="text" class="status-good p-1 bg-transparent  border-0 font-italic" value="OK" >
        </span>
      {{/unless}}

    </div>

    <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3">
      {{! Second column }}

      {{! API }}
      <div class="mb-3 input-group">
        <div class="input-group-prepend">
          <label class="p-1 input-group-text font-weight-bold">API:</label>
        </div>
        {{#if (not (is-empty oil.apis))}}
          <input {{action "updateAPI" on="change"}} type="text" size = "10" class="pl-1 bg-transparent border" 
            placeholder="API value" value={{round-relative oil.apis.[0].gravity 2}}>
          {{!-- <Input @id="api" @type="text" @size="10" @class="pl-1 bg-transparent border" 
            @placeholder="API value" @value={{round-relative oil.apis.[0].gravity 2}}
            @change={{action "updateAPI"}} /> --}}
        {{else}}
          <input type="text" size = "12" class="pl-1 bg-transparent border"
            placeholder="API value" value="No Values">
        {{/if}}
      </div>

      {{! Categories }}
      <div class="mb-3 card w-50">
        <div class="p-0 card-header">
          <span class="p-1 input-group-text font-weight-bold">Categories:</span>
        </div>
        <ul class="list-group list-group-flush">
          {{#each oil.categories as |category|}}
            <li class="p-0 pl-1 list-group-item bg-transparent">{{category}}</li>
          {{else}}
            <li class="p-0 pl-1 list-group-item bg-transparent">None</li>
          {{/each}}      
        </ul>
      </div>
    </div>

    <div class="col">
      {{! Third column }}

      <strong>Location:</strong>
      {{#if oil.location}}
        {{oil.location}}
      {{else}}
        None
      {{/if}}
      <br>

      <strong>Reference:</strong>
      {{#if oil.reference}}
        {{oil.reference}}
      {{else}}
        None
      {{/if}}
      <br>

      <strong>Reference Date:</strong>
      {{#if oil.referenceDate}}
        {{! Europe/London is how we lookup GMT in moment.js }}
        {{moment-format (unix oil.referenceDate) "YYYY-MM-DD" timeZone="Europe/London"}}
      {{else}}
        None
      {{/if}}
      <br>

      <strong>Sample Received Date:</strong>
      {{#if oil.sampleDate}}
        {{! Europe/London is how we lookup GMT in moment.js }}
        {{moment-format (unix oil.sampleDate) "YYYY-MM-DD" timeZone="Europe/London"}}
      {{else}}
        None
      {{/if}}
      <br>

      <strong>Comments:</strong>
      {{#if oil.comments}}
        {{oil.comments}}
      {{else}}
        None
      {{/if}}
      <br>
    </div>  

  </div>

  <div class="row">
    <div class="col">
      {{#if oil.status}}
        <ul>
          {{#each oil.status as |stat|}}
            <li><i class="status-bad">{{stat}}</i></li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </div>

</div>
