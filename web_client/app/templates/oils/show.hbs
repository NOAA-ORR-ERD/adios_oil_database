<div class="container-fluid">
  <div class="row">
    <div class="col-sm">
      <h2 class="title">{{this.model.name}}</h2>
    </div>

    <div class="col-sm-2">
      <h3>
        {{#link-to "oils"}}
          <span class="badge badge-dark">
            Back to List
          </span>
        {{/link-to}}
      </h3>    
    </div>

  </div>

  <div class="content">
    <TabGeneral 
      @oil={{this.model}} 
      @oilTypes={{array
          "Crude"
          "Refined"
          "Bitumen Product"
          "Other"
          "Empty (unclassified)"}}
    />
  </div>

  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      {{#each (weathered-samples this.model) as |sample|}}
        {{#if sample}}
          <a id="nav-{{slug sample}}-tab" href="#nav-{{slug sample}}"
             aria-controls="nav-{{slug sample}}"
             data-toggle="tab" role="tab"
             class="nav-item nav-link" aria-selected="false">
            w={{sample}}
          </a>
        {{else}}
          <a id="nav-{{slug sample}}-tab" href="#nav-{{slug sample}}"
             aria-controls="nav-{{slug sample}}"
             data-toggle="tab" role="tab"
             class="nav-item nav-link active" aria-selected="true">
            w={{sample}} (fresh)
          </a>
        {{/if}}

      {{/each}}
    </div>
  </nav>

  <div class="tab-content" id="nav-tabContent">

    {{#each (weathered-samples this.model) as |sample|}}
      {{#if sample}}
        <div class="tab-pane fade active" role="tabpanel"
             id="nav-{{slug sample}}" aria-labelledby="nav-{{slug sample}}-tab">
          <TabPane::WeatheredTopLevel @oil={{this.model}} @weathered={{sample}}/>
        </div>
      {{else}}
        <div class="tab-pane fade active show" role="tabpanel"
             id="nav-{{slug sample}}" aria-labelledby="nav-{{slug sample}}-tab">
          <TabPane::WeatheredTopLevel @oil={{this.model}} @weathered={{sample}}/>
        </div>
      {{/if}}
    {{/each}}

  </div>

</div>
