# Oil Database Web API Docker configuration
#

ARG KEY_FILE
ARG PYTHON_VER

FROM registry.orr.noaa.gov/erd/centos-conda/centos7-python$PYTHON_VER

RUN echo "ip_resolve=4" >> /etc/yum.conf

RUN yum update -y
RUN conda update -y conda \
    && conda update -y python \
    && conda clean -y --all

RUN echo "KEY FILE: $KEY_FILE"
COPY $KEY_FILE /root/.ssh/id_rsa
RUN chmod og-rw /root/.ssh/id_rsa
RUN cat /root/.ssh/id_rsa

RUN echo "[gitlab.orr.noaa.gov]:9933,[3.133.34.161]:9933 ecdsa-sha2-nistp256 AAAAE2VjZHNhLXNoYTItbmlzdHAyNTYAAAAIbmlzdHAyNTYAAABBBMgZKGmTe4Qk+PLudgaTbu0R5OzLqqkAxFtp/O+/Aw2YupqtJQb5XDXaPvBtIg2pohmHc66Yjk7HpIoEU/R4+50=" > /root/.ssh/known_hosts
RUN chmod og-rw /root/.ssh/known_hosts

COPY ./ /adios-db/
WORKDIR adios-db

# install deps
RUN conda install -y \
    python=$PYTHON_VER \
    --file adios_db/conda_requirements.txt \
    --file web_api/conda_requirements.txt \
    --file documents/conda_requirements.txt \
    && conda clean --all

RUN cd adios_db && pip install -e ./
RUN cd web_api && pip install -e ./

# build docs
RUN cd documents \
    && sphinx-build -a -E -b html source build/html \
    && /usr/bin/cp -rf build/html/* ../user_docs \
    && /usr/bin/rm -rf build


RUN mkdir /config
RUN /usr/bin/cp /adios-db/oildb-deploy/config/stage/web_api/* /config/

EXPOSE 9898
ENTRYPOINT ["/adios-db/web_api/docker_start.sh"]
